<!-- Layout for a single list item -->



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:id="@+id/forecastitem"
    android:orientation="vertical"
    >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="6dp"
    android:fontFamily="casual"
    android:textColor="#ffffff"
    android:textStyle="bold"
    android:background="@drawable/aa"
    android:id="@+id/time"
    android:text="3:00 PM"/>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/forecast"
    android:elevation="4dp"

    android:orientation="vertical"
    android:background="@drawable/your_rounded_shape">

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:gravity="center"
        android:paddingTop="4dp"
        android:elevation="4dp"

        android:textAlignment="center"
        >






        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#3b1212"
            android:id="@+id/Temperature"
            android:textSize="20sp"
            android:fontFamily="monospace"
            android:text="Temperature"/>


    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="14dp"
        android:id="@+id/thunder"
        android:elevation="4dp"

        android:textAlignment="center"
        >



        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:id="@+id/Description"

            />





    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingTop="14dp"

        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="start"
        android:paddingLeft="7dp"

        android:textAlignment="center"
        >








        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wind_direction"
            android:textColor="#2851ce"
            android:layout_gravity="center_vertical"
            android:text="Wind Direction:"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deg"
            android:paddingRight="2dp"
            android:layout_marginLeft="7dp"
            android:textAlignment="textEnd"
            android:layout_gravity="center_vertical"
            android:text="deg"/>




    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingLeft="7dp"
        android:paddingTop="14dp"

        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="start"
        android:textAlignment="center"
        >







        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wind_speed"
            android:textColor="#62de0a"
            android:layout_gravity="center_vertical"
            android:text="Wind Speed:"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/speed"
            android:paddingRight="2dp"
            android:layout_marginLeft="7dp"
            android:textAlignment="textEnd"
            android:layout_gravity="center_vertical"
            android:text="speed"/>



    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="start"
        android:paddingLeft="7dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"

        android:textAlignment="center"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp_akf"
            android:layout_gravity="center_vertical"
            android:textColor="#9711d6"
            android:text="Kf-Temperature:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/temp_kf"
            android:textAlignment="textEnd"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:paddingRight="2dp"
            android:text="temp_kf"/>


    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textAlignment="center"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#1f1b21"
            android:id="@+id/more"
            android:text="More"/>



    </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="#00ffffff"
        android:layout_height="30dp" />
</LinearLayout>
